// 1. Database configuration
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 2. The User Model (matches NextAuth requirements)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  password      String?   // Optional because OAuth (Google/GitHub) doesn't use passwords
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relationship: A user has many job applications
  jobs          Job[]
}

// 3. The Job Application Model
model Job {
  id          String   @id @default(cuid())
  
  // Core Job Data
  position    String
  company     String
  location    String?
  salary      String?  
  url         String?
  
  // The Column Status (for your drag-and-drop board)
  status      JobStatus @default(APPLIED)
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relationship: Belongs to one User
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// 4. Enums restrict the 'status' to specific values
enum JobStatus {
  APPLIED
  INTERVIEWING
  OFFER
  REJECTED
}